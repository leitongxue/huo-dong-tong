<div class="single-form-container">
  <%= form_for @user do |f| %>
      <div class="boxed-group">
        <h3>注册</h3>

        <div class="boxed-group-inner">
          <dl class="form">
            <dt><%= f.label :name %></dt>
            <dd><%= f.text_field :name %></dd>
          </dl>
          <dl class="form">
            <dt><%= f.label :email %></dt>
            <dd><%= f.text_field :email %></dd>
          </dl>
          <dl class="form">
            <dt><%= f.label :password %></dt>
            <dd><%= f.password_field :password %></dd>
          </dl>
          <dl class="form">
            <dt><%= f.label :password_comfirmation %></dt>
            <dd><%= f.password_field :password_comfirmation %></dd>
          </dl>
          <p><%= f.submit "注 册", :class => "button primary" %></p>
        </div>
      </div>
  <% end %>
</div>