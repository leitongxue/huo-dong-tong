<div class="header">
  <div class="container clearfix">
    <a class="header-logo-wordmark" href="/">
      HOME
    </a>
    <ul id="user-links">
      <% if current_user %>
          <%= link_to current_user.name %>
          <%= link_to "退出", logout_path, method: "delete" %>
      <% else %>
          <%= link_to "注册", signup_path %>
          <%= link_to "登陆", login_path %>
      <% end %>
    </ul>
  </div>
</div>